@using PetitesPuces.Models
@model PetitesPuces.Models.PPMessage


@{
    var ctxt = new BDPetitesPucesDataContext();
    var id = Model.NoExpediteur;
                
    var gestionnaires = (from util
        in ctxt.PPGestionnaires
        where util.NoGestionnaire == id
        select util).ToList();
                
    var vendeurs = (from util
        in ctxt.PPVendeurs
        where util.NoVendeur == id
        select util).ToList();
                
    var clients = (from util
        in ctxt.PPClients
        where util.NoClient == id
        select util).ToList();
    
    IUtilisateur expediteur = clients.Concat<IUtilisateur>(vendeurs).Concat<IUtilisateur>(gestionnaires).FirstOrDefault();  
}

<a href="#" class="list-group-item" onclick="loadCourriel(@Model.NoMsg);">
    <div class="row">
        <div class="col-lg-4">
            <input type="checkbox">
            <span class="name" style="min-width: 120px; display: inline-block;">@expediteur.DisplayName</span>
        </div>
        <div class="col-lg-4">
            <span class="">@Model.objet</span>
        </div>
        <div class="col-lg-4">
            <span class="pull-right">
                <span class="glyphicon glyphicon-paperclip"></span>
                <span class="badge">11:30 PM</span>
            </span>
        </div>       
    </div>
</a>