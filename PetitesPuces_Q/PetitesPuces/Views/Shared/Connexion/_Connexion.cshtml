<form id="login-form" method="post" role="form" style="display: block;">


    <div class="form-row">
        @Html.Label("usernameLogin", htmlAttributes: new { @class = "col-md-6 col-lg-offset-3 text-primary" })
        <div class="col-md-6 col-lg-offset-3">
            @Html.Editor("usernameLogin", new { id = "usernameLogin" })
            @Html.ValidationMessage("usernameLogin", "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="form-group">
        <input type="password" name="passwordLogin" id="passwordLogin" tabindex="2" class="form-control center-block" placeholder="Mot de passe">
    </div>
    <div class="form-group text-center">
        <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
        <label for="remember"> Se souvenir de moi</label>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="btn btn-lg btn-primary btn-block" value="Se connecter">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <a href="@Url.Action("OubliMDP","Home")" tabindex="5" class="forgot-password">Mot de passe oublié?</a><br />
                    <a href="@Url.Action("Index","Client")" tabindex="5" class="forgot-password">Connecter en tant que client</a><br />
                    <a href="@Url.Action("Index","Vendeur")" tabindex="5" class="forgot-password">Connecter en tant que vendeur</a><br />
                    <a href="@Url.Action("Index","Gestionnaire")" tabindex="5" class="forgot-password">Connecter en tant que gestionnaire</a>
                </div>
            </div>
        </div>
    </div>
</form>
