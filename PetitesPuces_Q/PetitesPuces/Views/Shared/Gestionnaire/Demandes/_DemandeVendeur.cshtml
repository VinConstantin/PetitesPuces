@using PetitesPuces.Utilities
@model PetitesPuces.Models.PPVendeur

@{
    ViewBag.Title = "_DemandeVendeur";
}

<tr class="v-align-middle">
    <th >
        @Model.NoVendeur
    </th>
    <td>
        @Model.NomAffaires
    </td>
    <td>
        @Model.Prenom
    </td>
    <td>
        @Model.Nom
    </td>
    <td>
        @Model.DateCreation.ToShortDateString()
    </td>
    <td class="text-right">
        <form class="form-inline">
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalGestion">
                <i class="glyphicon glyphicon-ok v-align-middle"></i>
            </button>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modalDetails">
                <i class="glyphicon glyphicon-info-sign v-align-middle"></i>
            </button>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modalGestion">
                <i class="glyphicon glyphicon-remove v-align-middle"></i>
            </button>
        </form>
    </td>
</tr>
