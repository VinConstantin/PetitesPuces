@model Tuple<PetitesPuces.Models.PPVendeur, bool>

<tr>
    <th class="text-left">@Model.Item1.NoVendeur</th>
    <td class="text-left">@Model.Item1.NomAffaires</td>
    <td class="text-left">@Model.Item1.AdresseEmail</td>
    <td class="text-left">@Model.Item1.Prenom</td>
    <td class="text-left">@Model.Item1.Nom</td>
    @if (@Model.Item2)
    {
        <td class="text-right">
            <button class="btn btn-danger">
                <i class="glyphicon glyphicon-remove"></i>
            </button>
        </td>
    }
</tr>