@using PetitesPuces.Utilities
@model PetitesPuces.Models.Panier

<tr class="v-align-middle" style="height: 51px">
    <th class="rowHead">@Model.Client.Nom</th>
    <td>@Model.DateCreation.ToShortDateString()</td>
    <td>@Model.Articles.Count()</td>
    <td>@Formatter.Money(Model.getPrixTotal())</td>
    <td>
        <button class="btn btn-danger" title="Supprimer" onclick="confirmer(@Model.Client.NoClient)" data-toggle="modal" data-target="#confirmationPanier">
            <i class="glyphicon glyphicon-remove v-align-middle"></i>
        </button>
    </td>
</tr>