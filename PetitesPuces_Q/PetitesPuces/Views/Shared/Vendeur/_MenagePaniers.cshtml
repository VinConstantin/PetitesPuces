@using PetitesPuces.Utilities
@model PetitesPuces.Models.Panier

<tr onclick="infoPanier(@Model.Client.NoClient)" class="v-align-middle text-left" style="height: 51px">
    <th class="rowHead"><a onclick="infoClient(@Model.Client.NoClient)" class="alert-link" data-toggle="modal" data-target="#confirmationPanier">@Model.Client.DisplayName</a></th>
    <td>@Model.DateCreation.ToShortDateString()</td>
    <td class="prixQuantite">@Model.GetNbItems()</td>
    <td class="prixQuantite">@Formatter.Money(Model.getPrixTotal())</td>
    <td class="text-right">
        <button class="btn btn-danger" title="Supprimer" onclick="confirmer(@Model.Client.NoClient)" data-toggle="modal" data-target="#confirmationPanier">
            <i class="glyphicon glyphicon-remove v-align-middle"></i>
        </button>
    </td>
</tr>