@model PetitesPuces.Models.PPArticlesEnPanier
@using PetitesPuces.Utilities


<tr class="text-right">
    <td style="width: 60px" scope="row">
        <img src="@Url.Content("/images/produits/" + Model.PPProduit.Photo)" onerror="this.src = 'https://placehold.it/150x80?text=IMAGE';" class="img-responsive" style="height: 50px; width: 50px" alt="Image">
    </td>
    <td class="text-left" style="width: 30vh">@Model.PPProduit.Nom</td>
    <td class="prixQuantite">@Model.NbItems</td>
    <td class="prixQuantite">@Formatter.PrixProduitAvecVente(Model.PPProduit)</td>
</tr>