@model List<PetitesPuces.Models.Panier>

@if (Model.Count() == 0)
{
    <h4 class="text-center col-xs-12">Aucun panier durant cette période</h4>
}
else
{
    <table class="table mt-2 m-0 bg-light">
        <tr>
            <th class="rowHead">
                Client
            </th>
            <th>
                Date de création
            </th>
            <th class="prixQuantite">
                Nombre d'items
            </th>
            <th class="prixQuantite">
                Total
            </th>
        </tr>
    </table>
    <div class="tableau">
        <table class="table table-hover text-right bg-light m-0">
            @foreach (var panier in Model)
            {
                @Html.Partial("Vendeur/_Panier", panier)
            }
        </table>
    </div>
}