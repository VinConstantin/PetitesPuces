@using PetitesPuces.Utilities
@model PetitesPuces.Models.Panier

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h2 class="modal-title" id="exampleModalLabel" style="overflow: hidden; text-overflow: ellipsis;">
        Panier de @Model.Client.DisplayName
    </h2>
</div>
<div class="modal-body">
    <table class="table m-0 bg-light table-hover">
        <thead>
            <tr>
                <th style="width:60px">

                </th>
                <th>
                    Nom du produit
                </th>   
                <th class="prixQuantite">
                    Quantité
                </th>
                <th class="prixQuantite">
                    Prix
                </th>
            </tr>
        </thead>
        @foreach (var article in Model.Articles)
        {
            @Html.Partial("Vendeur/_ProduitPanier", article);
        }
    </table>
</div>
<div class="modal-footer">
    @if (Model.EstAncien)
    {
        <button class="btn btn-link btn-lg" onclick="confirmer(@Model.Client.NoClient)">
            <span class="glyphicon glyphicon-remove"></span>
        </button>
    }
</div>