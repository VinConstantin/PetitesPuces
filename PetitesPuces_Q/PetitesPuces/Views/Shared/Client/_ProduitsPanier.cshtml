@using System.Globalization
@using PetitesPuces.Utilities
@model PetitesPuces.Models.PPArticlesEnPanier

<tr style="height: 10vh; max-height: 10vh" onclick="visualiser(@Model.NoProduit)">
    <td>
        <div class="row">
            <div class="col-md-2">
                <img src="@Url.Content("/images/produits/" + Model.PPProduit.Photo)" onerror="this.src = 'https://placehold.it/150x80?text=IMAGE';" class="img-responsive" style="max-width: 50%; max-height: 100%" alt="Image">

            </div>
            <div class="col-md-2">
                <div class="row">
                    <p>@Model.PPProduit.Nom</p>
                </div>
            </div>
            <div class="col-md-2">
                <p>@Formatter.Money(@Model.PPProduit.PrixVente)</p>
            </div>
            <div class="col-md-3">
                <div class="row quantity">
                    <button class="minus-btn" type="button" name="button" onclick="moinsQuantite(@Model.PPProduit.NoProduit, @Model.PPProduit.NoVendeur)">
                        <span class="glyphicon glyphicon-minus"></span>
                    </button>
                    <input type="text" style="width: 30%;" pattern="\d*" name="name" value="@Model.NbItems" width="50px" id="@Model.PPProduit.NoProduit">
                    <button class="plus-btn" type="button" name="button" onclick="plusQuantite(@Model.PPProduit.NoProduit, @Model.PPProduit.NoVendeur)">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </div>
                <div class="row">
                    @{string id = "Erreur" + Model.NoProduit;}
                    <span class="label label-warning" id="@id"></span>
                </div>
            </div>
            <div class="col-md-2">
                <p>@Formatter.Money(@Model.PPProduit.PrixVente*@Model.NbItems)</p>
            </div>
            
            <div class="col-md-1">
               
                <a class="btn btn-link btn-lg" style="color: red" title="Retirer du panier" onclick="supprimerArticles(@Model.PPProduit.NoProduit, @Model.PPProduit.NoVendeur)">
                    <span class="glyphicon glyphicon-remove"></span>
                </a>
            </div>
        </div>
    </td>
</tr>