@using PetitesPuces.Securite
@using PetitesPuces.Utilities
@model PetitesPuces.Models.PPCommande


<div class="col-lg-12">
    <div class="well hoverDiv row" onclick="ouvrirPdf(@Model.NoCommande)">
        <div class="col-xs-3">
            <h4>@Model.DateCommande.ToShortDateString()</h4>
        </div>
        <div class="col-xs-3">
            <h4>@Model.PPVendeur.NomAffaires</h4>
        </div>
        <div class="col-xs-3">
            <h4>@Formatter.Money(Model.TPS.GetValueOrDefault() + Model.TVQ.GetValueOrDefault() + Model.MontantTotAvantTaxes)</h4>
        </div>
        <div class="col-xs-3">
            <h4>
                @{ var statut = Model.Statut == 'L' ? "<span class='glyphicon glyphicon-ok-circle'></span> Livré".ToHtml() : "En traitement".ToHtml(); }
                @statut
            </h4>
        </div>
    </div>
</div>

