

@* Pour ajouter des images vous n'avez qu'a les ajoutez dans le dossier images/carouselPublicite*@


<script>
    //Pour mettre le premier element du carousel a acive
    window.onload = function() {
        $(".item").first().addClass("active");
        
    };
</script>

<div id="myCarousel" class="carousel" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @{
            const string IMG_DIR = "/images/carouselPublicite";

            foreach (var img in Directory.GetFiles(Server.MapPath(IMG_DIR)))
            {
                var path = IMG_DIR +"/" + img.Split(new char[] { '/', '\\' }).Last();

                <div class="item">
                    <img src="@Url.Content(path)"/>
                </div>
            }
        }
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>