@model PetitesPuces.Models.CatalogueViewModel

@{
    ViewBag.Title = "Catalogue";
}

@section navbar {
    <li>@Html.ActionLink("Catalogue", "Catalogue", "Client")</li>
    <li>@Html.ActionLink("Mon Panier", "MonPanier", "Client")</li>
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">@ViewBag.Title</h1>
        <div class="row">
            <div class="col-md-8">
                <form class="pagination" style="width: 100%">
                    <div class="input-append">
                        <input name="search" id="search" style="width: 80%"/>
                        <button class="btn">  <i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <nav aria-label="Pagination">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container">  
    <div class="row">
        @foreach (var produits in Model.Produits)
        {
            @Html.Partial("_Produits", produits)
        }
    </div>
</div>
