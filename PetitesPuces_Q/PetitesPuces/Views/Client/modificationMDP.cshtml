
@{
    ViewBag.Title = "Index";
}
<hr>
<div class="container">
    
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center well">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Modification du MDP</h2>
                            <sm>Le nouveau MDP ne doit pas être identique qu'avant</sm>
                            <div class="panel-body">

                                <form class="form">
                                    <fieldset>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-edit color-blue"></i></span>

                                                <input id="emailInput" placeholder="Ancien mot de passe" class="form-control" type="password" oninvalid="setCustomValidity('Ce mot de passe ne coresponds pas!')"  required="">
