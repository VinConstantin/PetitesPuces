                                                <input id="emailInput" placeholder="Confirmer le nouveau mot de passe" class="form-control" type="password" oninvalid="setCustomValidity('Veuillez rentrer un mot de passe identique!')" required="">
                                             </div>
                                        </div>
                                        <div class="form-group">
                                            <input class="btn btn-lg btn-primary btn-block center-block" value="Modifier" type="submit">
                                        </div>
                                    </fieldset>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 
</div>
