@model IList<PetitesPuces.ViewModels.Gestionnaire.Redevance>
<h2 class="row text-center">Redevances</h2>

<div class="row">
    <div class="col-xs-offset-1 col-xs-10">
        <h3 class="row text-center">Redevances dûes</h3>
        <div class="row well">
            <table class="table bg-light">
                <tr>
                    <th>
                        Nom du vendeur
                    </th>
                    <th class="text-right">
                        Solde
                    </th>
                    <th class="text-right">
                        Pourcentage de redevances
                    </th>
                    <th>
                        Solde en souffrance depuis
                    </th>
                    <th></th>
                </tr>
                @foreach (var redevance in @Model)
                {
                    @Html.Partial("Gestionnaire/_Redevance", redevance)
                }
            </table>
        </div>
    </div>
</div>
