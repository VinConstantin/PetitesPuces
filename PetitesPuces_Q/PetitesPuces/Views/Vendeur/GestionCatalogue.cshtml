@model List<PetitesPuces.Models.Product>
@{
    ViewBag.Title = "Gestion du catalogue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section navbar {
    <li>@Html.ActionLink("Accueil", "Index", "Vendeur")</li>
    <li>@Html.ActionLink("Catalogue", "GestionCatalogue", "Vendeur")</li>
    <li>@Html.ActionLink("Commandes", "GestionCommandes", "Vendeur")</li>
    <li>@Html.ActionLink("Paniers", "GestionPaniers", "Vendeur")</li>
    <li>@Html.ActionLink("Profil", "Profil", "Vendeur")</li>
}

<h2 class="text-center">Votre catalogue</h2>

<div class="well text-center col-xs-10 col-xs-offset-1">
    <div class="row">
        @foreach (var produits in Model)
        {
            @Html.Partial("Client/_Produits", produits)
        }
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
