@model List<PetitesPuces.Models.Panier>

@{
    ViewBag.Title = "Gestion des paniers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section navbar {
    <li>@Html.ActionLink("Accueil", "Index", "Vendeur")</li>
    <li>@Html.ActionLink("Mon catalogue", "Catalogue", "Vendeur")</li>
    <li>@Html.ActionLink("Commandes", "GestionCommandes", "Vendeur")</li>
    <li>@Html.ActionLink("Mes Paniers", "Paniers", "Vendeur")</li>
}

<h2 class="text-center">@ViewBag.Title</h2>

<h3 class="text-center col-xs-12">1 mois</h3>

<div class="well text-center col-xs-10 col-xs-offset-1">
    <table class="table lst-vendeurs mt-2">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().NomClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().DateCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().NbItems)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var panier in Model)
        {
            if (panier.DateCreation > DateTime.Today.AddMonths(-1))
            {
                @Html.Partial("Vendeur/_Panier", panier)
            }
        }
    </table>
</div>

