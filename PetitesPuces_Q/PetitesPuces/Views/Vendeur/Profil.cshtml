                @Html.ValidationMessageFor(model => model.PoidsMaxLivraison, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.LivraisonGratuite, htmlAttributes: new { @class = "" })
                @Html.EditorFor(model => model.LivraisonGratuite, new { htmlAttributes = new { @class = "form-control", @PlaceHolder = "Montant min pour livraison graduit" } })
                @Html.ValidationMessageFor(model => model.LivraisonGratuite, "", new { @class = "text-danger" })

            </div>
            <div class="form-group col-md-2">
                @Html.LabelFor(model => model.Taxes, htmlAttributes: new { @class = "" })
                @Html.DropDownListFor(model=>model.Taxes,  new List<SelectListItem>() {
                    new SelectListItem(){Text = "Oui",Value="1"},
                    new SelectListItem(){Text = "Non",Value="0"}

                }, new{ @class = "form-control text-primary"})

                @Html.ValidationMessageFor(model => model.Taxes, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="row">

            <div class="col-md-2 form-group col-lg-offset-2">
                <button  class="btn btn-lg btn-primary btn-block" onclick="location.href = '@Url.Action("Commande", "Client", new RouteValueDictionary(new {Etape = "Livraison"}))'">Modifier</button>
            </div>
            <div class="col-md-2 form-group ">
                <button id="btnRetour" class="btn btn-lg btn-block btn-outline-primary">Retour</button>
            </div>
        </div>
    </div>

}